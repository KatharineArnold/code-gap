<div class="container ">
    <div class="row">
        <div class="col">

            <h2 class="create-title">Update Your Project</h2>
        </div>
    </div>

    <form id="projectForm" data-project_id="{{project.id}}">
        <div class="form-group row">
            <label for="projectName" class="col-sm-2 col-form-label">Project Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectName" placeholder="Project Name" value="{{project.projectName}}">
            </div>
        </div>
        <div class="
                    form-group row">
            <label for="projectDescription" class="col-sm-2 col-form-label">Project Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectDescription" placeholder="Project Description" value="{{project.projectDescription}}">
            </div>
        </div>

        <button type="submit" class="btn btn-light" id="projectSubmit" data-nonProfitProfileId="{{nonProfitProfileId}}">Submit</button>
    </form>

</div>
<script src="/js/project/update.js"></script>
