<div class="container create">
    <div class="row">
        <div class="col">

            <h2 class="create-title">Update Volunteer Profile</h2>
        </div>
    </div>

    <form id="volunteerForm" data-volunteer_profile_id="{{volunteerProfile.id}}">
        <div class="form-group row">
            <label for="bio" class="col-sm-2 col-form-label">Bio</label>
            <div class="col-sm-10">
                <input type="text" id="bio" class="form-control" placeholder="Bio" value="{{volunteerProfile.bio}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="location" class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-10">
                <input type="text" id="location" class="form-control" placeholder="Location" value="{{volunteerProfile.location}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="hours" class="col-sm-2 col-form-label">Hours Available Per Week</label>
            <div class="col-sm-10">
                <input type="number" id="hours" class="form-control" placeholder="Hours" value="{{volunteerProfile.availability}}">
            </div>
        </div>

        <div class="form-group">
            <label for="techSelect">Select Technologies</label>
            <select multiple="form-group" class="form-control" id="techSelect" data-previous_technologies="{{volunteerProfile.technologies}}"
                required>
                <option value="react">React</option>
                <option value="node">Node.js</option>
                <option value="php">PHP</option>
                <option value="javascript">Javascript</option>
            </select>
        </div>

        <button type="submit" class="btn btn-light">Submit</button>
    </form>

</div>
<script src="/js/volunteer/update.js"></script>
