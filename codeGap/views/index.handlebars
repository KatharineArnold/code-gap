<div class="container">
  <div class="row header-burger">
    <div class="col-md-6 offset-md-4">
      <h1>CCode Gap</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-4">
      <img src="/assets/img/burger-logo.png">
    </div>
  </div>

  <div class="row burgers justify-content-center">
    <div class="col-4">
      <h2>Ready To Eat</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgerspartial/burger-block}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-1"></div>

    <div class="col-4">
      <h2>Eaten</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgerspartial/burger-block}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>




  <div class="row add-burger">
    <div class="col-md-6 offset-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button class="btn btn-success" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>
</div>
